# Bandit Configuration for Currency Converter
[bandit]
# Exclude test files from security scanning
exclude_dirs = ['tests', 'venv', '.venv', 'env']

# Skip specific test IDs if they are false positives
# B101: Test for use of assert
# B601: Test for shell injection within Paramiko
skips = ['B101']

# Security test levels
# LOW: Informational
# MEDIUM: Warning  
# HIGH: Error
